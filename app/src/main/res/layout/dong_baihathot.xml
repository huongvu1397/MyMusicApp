<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_baihathot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txt_ten_baihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/img_baihathot"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Ten Bai Hat"
        android:textColor="#363636"
        android:textSize="18sp" />

    <TextView
        android:textColor="#8c8a8a"
        android:id="@+id/txt_casibaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ten_baihathot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/img_baihathot"
        android:singleLine="true"
        android:text="Ca Si" />
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:src="@drawable/iconlove"
        android:id="@+id/img_luotthich"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="30dp" />
</RelativeLayout>