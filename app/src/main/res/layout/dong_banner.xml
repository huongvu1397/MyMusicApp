<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imgview_banner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:textSize="17sp"
            android:text="test"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/txt_title"
            android:layout_alignTop="@id/imgview_banner"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgview_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_toRightOf="@id/imgview_banner"
            android:layout_below="@id/txt_title"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:id="@+id/txtNoidung"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:textColor="#fff"
                android:text="Test 2 sdsdsdasdasdasdasda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        
    </RelativeLayout>
</RelativeLayout>